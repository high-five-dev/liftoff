{
    "name": "high-five/liftoff",
    "description": "A launchpad for Craft CMS website development.",
    "version": "1.0.0",
    "type": "project",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Harm Putman",
            "email": "harm@high-five.dev"
        }
    ],
    "keywords": [
        "craft",
        "cms",
        "craftcms"
    ],
    "support": {
        "issues": "https://github.com/high-five-dev/liftoff/issues",
        "source": "https://github.com/high-five-dev/liftoff"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org",
            "only": [
                "wpackagist-plugin/*",
                "wpackagist-theme/*"
            ]
        }
    ],
    "require": {
        "craftcms/cms": "^5.0.0",
        "high-five/craft-hyperdrive": "dev-main",
        "nystudio107/craft-vite": "^5.0",
        "vlucas/phpdotenv": "^5.4.0"
    },
    "require-dev": {
        "craftcms/generator": "^2.0.0",
        "craftcms/phpstan": "dev-main",
        "symplify/easy-coding-standard": "^12.6",
        "yiisoft/yii2-shell": "^2.0.3"
    },
    "scripts": {
        "post-create-project-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example.dev', '.env');\"",
            "@php composer-scripts/post-create-project.php",
            "echo 'Cleaning composer.json'",
            "@composer config --unset scripts.post-create-project-cmd",
            "@composer config --unset name",
            "@composer config --unset license",
            "@composer config --unset type",
            "@composer update --ignore-platform-reqs",
            "@composer dump-autoload -o",
            "rm -rf composer-scripts",
            "make start",
            "make install"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example.dev', '.env');\""
        ],
        "check-cs": "vendor/bin/ecs check --ansi",
        "fix-cs": "vendor/bin/ecs check --fix --ansi",
        "phpstan": "phpstan --memory-limit=1G"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "platform": {
            "php": "8.4"
        },
        "allow-plugins": {
            "craftcms/plugin-installer": true,
            "yiisoft/yii2-composer": true
        }
    }
}
